# Werewolf Arena - Purple Agent (Player)
# AgentBeats-compatible Docker image

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY purple_agent/ ./purple_agent/

# Create non-root user for security
RUN useradd -m -u 1000 agent && chown -R agent:agent /app
USER agent

# Default environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV LLM_MODEL=gpt-4o-mini

# Expose default port
EXPOSE 8001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8001/health || exit 1

# Entry point with AgentBeats-required arguments
ENTRYPOINT ["python", "-m", "purple_agent.server"]

# Default arguments (can be overridden)
CMD ["--host", "0.0.0.0", "--port", "8001"]
